# File name: menublocks.kv
#:import menublocks menublocks
#:kivy 1.9.0

<BlocksMenu@TabbedPanel>:
	size_hint: 1,1
    do_default_tab: False

    TabbedPanelItem:
        text: 'Blocos A'
		StackLayout:
			Block:
				size_hint: None,1
				width: self.height
				canvas.before:
					Color:
						rgb: 1,1,0
					Rectangle:
						size: self.size
			Block:
				size_hint: None,1
				width: self.height
				canvas.before:
					Color:
						rgb: 0,1,0
					Rectangle:
						size: self.size
			Block:
				size_hint: None,1
				width: self.height
				canvas.before:
					Color:
						rgb: 0,1,1
					Rectangle:
						size: self.size

			Block:
				size_hint: None,1
				width: self.height
				canvas.before:
					Color:
						rgb: 1,0,1
					Rectangle:
						size: self.size
    TabbedPanelItem:
        text: 'Blocos B'
        Label:
            text: 'Blocos B'
		StackLayout:
			Block:
				size_hint: None,1
				width: self.height
				canvas.before:
					Color:
						rgb: 1,1,0
					Rectangle:
						size: self.size