# File name: maingui.kv
#:kivy 1.9.0
<MainGUI>:
	orientation: 'vertical'
	RelativeLayout:
		size_hint: 1,0.05
		canvas.before:
			Color:
				rgb: 0.8,0.8,0.8
			Rectangle:
				size: self.size
		MenuBar:
			id: _menu_bar

	RelativeLayout:
		canvas.before:
			Color:
				rgb: 1,1,1
			Rectangle:
				size: self.size
				source: 'images/background.png'
		size_hint: 1,0.95

		RelativeLayout:
			id: _trash_can
			size_hint: None,None
			size: _blocks_menu.height*0.8,_blocks_menu.height*0.8
			pos_hint: {'right': 1,'y':0.22}
			canvas:
				Rectangle:
					size: self.size
					source: 'images/trash_can.png'

		BlocksMenu:
			size_hint: 1,0.25
			id: _blocks_menu
			drawing_area: _drawing_area

		DrawingArea:
			size_hint: 1,0.75
			id: _drawing_area
			trash_can: _trash_can
			block_menu: _blocks_menu
